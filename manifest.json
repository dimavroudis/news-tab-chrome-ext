{

  "manifest_version": 2,
  "name": "NewsTab - Τα νέα στην αρχική σου σελίδα",
  "short_name": "NewsTab",
  "version": "1.0",

  "description": "Τα νέα στην ημέρας σε κάθε καινούρια καρτέλα!",

  "developer": {
    "name": "Dimitris Mavroudis",
    "url": "http://dimitrismavroudis.gr/"
  },

  "icons": {
    "16": "icons/icon-18.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "https://*/", "http://*/"
  ],

  "chrome_url_overrides": {
    "newtab": "newtab/newtab.html"
  },

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"

}
